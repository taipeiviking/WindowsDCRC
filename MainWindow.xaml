<Window x:Class="WindowsDCRC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsDCRC"
        mc:Ignorable="d"
        Title="Windows Display Configuration Registry Cleaner (Windows DCRC)" Height="500" Width="1000">
    <DockPanel LastChildFill="True">
        <DockPanel DockPanel.Dock="Top" Margin="8">
            <TextBlock x:Name="IntroText"
                       DockPanel.Dock="Left"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,8,0">
                <Run Text="This app can help speed up your system responding to monitors being plugged in or out."/>
                <LineBreak/>
                <Run Text="Every time you change your display settings, Windows saves a new profile in the registry."/>
                <LineBreak/>
                <Run Text="Select the configuration(s) you wish to remove and click Delete."/>
                <LineBreak/>
                <Run Text="When deleting, you'll be asked to save a .reg backup that you can double-click to restore later."/>
                <LineBreak/>
            </TextBlock>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                <Button x:Name="AboutButton" Content="About" Width="80" Height="30" Margin="0,0,8,0" Click="AboutButton_Click"/>
                <Button x:Name="RefreshButton" Content="Refresh" Width="100" Height="30" Margin="0,0,8,0" Click="RefreshButton_Click"/>
                <Button x:Name="DeleteButton" Content="Backup .reg and Delete All" Width="200" Height="30" Click="DeleteButton_Click"/>
            </StackPanel>
        </DockPanel>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem HorizontalAlignment="Left">
                <TextBlock>
                    <Run Text="Status: "/><Run x:Name="StatusReadyText" Text="Ready"/>
                </TextBlock>
            </StatusBarItem>
            <Separator />
            <StatusBarItem HorizontalAlignment="Left">
                <TextBlock>
                    <Run Text="Detected number of display profiles: "/><Run x:Name="StatusDetectedCountText" Text="0"/>
                </TextBlock>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Margin="0,0,16,0">
                        <Run Text="Version: "/><Run x:Name="StatusVersionText" Text=""/>
                    </TextBlock>
                    <TextBlock Grid.Column="1">
                        <Run Text="Build Date: "/><Run x:Name="StatusBuildDateText" Text=""/>
                    </TextBlock>
                </Grid>
            </StatusBarItem>
        </StatusBar>
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DataGrid x:Name="ConfigGrid"
                      AutoGenerateColumns="False"
                      SelectionMode="Extended"
                      SelectionUnit="FullRow"
                      IsReadOnly="True"
                      SelectionChanged="ConfigGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Key" Binding="{Binding RegistryKeyName}" Width="2*"/>
                    <DataGridTextColumn Header="SetId" Binding="{Binding SetId}" Width="2*"/>
                    <DataGridTextColumn Header="Timestamp" Binding="{Binding TimestampDisplay}" Width="*"/>
                    <DataGridTextColumn Header="Displays" Binding="{Binding DisplayCount}" Width="*"/>
                    <DataGridTextColumn Header="Resolution(s)" Binding="{Binding ResolutionSummary}" Width="2*"/>
                    <DataGridTextColumn Header="Position(s)" Binding="{Binding PositionSummary}" Width="*"/>
                    <DataGridTextColumn Header="Rotation" Binding="{Binding RotationSummary}" Width="*"/>
                    <DataGridTextColumn Header="Scaling" Binding="{Binding ScalingSummary}" Width="*"/>
                    <DataGridTextColumn Header="Refresh Hz" Binding="{Binding RefreshRateSummary}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <GroupBox Header="Details" Grid.Row="1" Margin="0,8,0,0" DataContext="{Binding SelectedItem, ElementName=ConfigGrid}">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Key:" FontWeight="Bold"/>
                    <TextBlock Grid.Column="1" Text="{Binding RegistryKeyName}"/>

                    <TextBlock Grid.Row="1" Text="SetId:" FontWeight="Bold"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SetId}"/>

                    <TextBlock Grid.Row="2" Text="Timestamp:" FontWeight="Bold"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding TimestampDisplay}"/>

                    <TextBlock Grid.Row="3" Text="Displays:" FontWeight="Bold"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DisplayCount}"/>

                    <TextBlock Grid.Row="4" Text="Summary:" FontWeight="Bold"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding ResolutionSummary}"/>

                    <DataGrid Grid.Row="5" Grid.ColumnSpan="2" ItemsSource="{Binding Displays}" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,8,0,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Width" Binding="{Binding Width}" Width="*"/>
                            <DataGridTextColumn Header="Height" Binding="{Binding Height}" Width="*"/>
                            <DataGridTextColumn Header="Pos X" Binding="{Binding PositionX}" Width="*"/>
                            <DataGridTextColumn Header="Pos Y" Binding="{Binding PositionY}" Width="*"/>
                            <DataGridTextColumn Header="Rotation" Binding="{Binding RotationDisplay}" Width="*"/>
                            <DataGridTextColumn Header="Scaling" Binding="{Binding ScalingDisplay}" Width="*"/>
                            <DataGridTextColumn Header="Refresh Hz" Binding="{Binding RefreshHzDisplay}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>
